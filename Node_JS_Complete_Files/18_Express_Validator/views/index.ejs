<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/font-awesome-5.8.2.css">
    <link rel="stylesheet" href="../public/css/bootstrap.css">
    <link rel="stylesheet" href="../public/css/mdb.css">
    <link rel="stylesheet" href="../public/css/styles.css">
    <title>Express Validator</title>
</head>
<body>

<!-- Main Navbar -->
<nav class="navbar navbar-expand-md navbar-dark bg-teal">
    <a class="navbar-brand" href="/">Express Validator</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
        </ul>
    </div>
</nav>

<!-- Register Form -->
<section class="p-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <% if(errors.length === 0){ %>
                    <div class="alert alert-success animated jackInTheBox">
                        <strong>Form Validation is Success </strong>
                        <button class="close" data-dismiss="alert">
                            <i class="fa fa-times-circle"></i>
                        </button>
                    </div>
                 <% } %>
                <div class="card">
                    <div class="card-header bg-teal text-white text-center">
                        <h3>Register</h3>
                    </div>
                    <div class="card-body bg-light">
                        <form novalidate action="/register" method="post">
                            <div class="form-group">
                                <input
                                        name="email"
                                        type="email"
                                        class="form-control <%= (errors.find((error => error.param === 'email'))) ? 'is-invalid' : '' %>"
                                        placeholder="Email"
                                        value="<%= user.email %>">
                                <div class="invalid-feedback">
                                    <%= (errors.find((error => error.param === 'email'))) ? 'Please Enter a Proper Email Id' : '' %>
                                </div>
                            </div>
                            <div class="form-group">
                                <input
                                        name="password"
                                        type="password"
                                        class="form-control <%= (errors.find((error => error.param === 'password'))) ? 'is-invalid' : '' %>"
                                        placeholder="Password"
                                        value="<%= user.password %>">
                                <div class="invalid-feedback">
                                    <%= (errors.find((error => error.param === 'password'))) ? 'Please Enter a valid password' : '' %>
                                </div>
                            </div>
                            <div class="form-group">
                                <input
                                        name="c_password"
                                        type="password"
                                        class="form-control <%= (errors.find((error => error.param === 'c_password'))) ? 'is-invalid' : '' %>"
                                        placeholder="Confirm Password"
                                        value="<%= user.c_password %>">
                                <div class="invalid-feedback">
                                    <%= (errors.find((error => error.param === 'c_password'))) ? 'Both Passwords Not Matched' : '' %>
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" value="Register" class="btn btn-teal">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Scripts -->
<script src="../public/js/jquery-3.4.0.min.js"></script>
<script src="../public/js/popper.min.js"></script>
<script src="../public/js/bootstrap.js"></script>
<script src="../public/js/mdb.js"></script>
</body>
</html>